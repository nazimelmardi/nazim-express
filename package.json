{
  "name": "codingsans-backend-test",
  "version": "1.0.0",
  "repository": "git@gitlab.com:codingsans/public/codingsans-backend-test.git",
  "author": "LaTotty <latotty@codingsnas.com>",
  "license": "MIT",
  "scripts": {
    "start": "ts-node -r dotenv/config src/index.ts",
    "dev": "nodemon -r dotenv/config src/index.ts",
    "test": "jest --config package.json",
    "lint": "eslint src --ext .ts"
  },
  "devDependencies": {
    "@codingsans/eslint-config": "4.0.0",
    "@types/bcryptjs": "2.4.2",
    "@types/express": "4.17.13",
    "@types/jest": "24.9.0",
    "@types/jsonwebtoken": "8.5.8",
    "@types/morgan": "1.9.3",
    "@types/node": "17.0.23",
    "@types/node-fetch": "2.6.1",
    "@types/winston": "2.4.4",
    "crypto": "1.0.1",
    "eslint": "6.8.0",
    "jest": "24.9.0",
    "nodemon": "2.0.15",
    "prettier": "1.19.1",
    "ts-jest": "24.3.0",
    "ts-node": "8.6.2",
    "typescript": "3.7.5"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.factory.ts",
      "!src/commands/*"
    ],
    "coverageReporters": [
      "html",
      "json"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "dotenv": "16.0.0",
    "express": "4.17.3",
    "jsonwebtoken": "8.5.1",
    "mongoose": "6.2.10",
    "morgan": "1.10.0",
    "node-fetch": "2.6.7",
    "winston": "3.7.2"
  }
}
